{
    "config": {
	"cert_type": ["zmq"]    
    },
    "interfaces": {
        "Subscribers": [
            {
                "Name": "frontend",
                "Type": "zmq_ipc",
                "EndPoint": {
                    "SocketDir": "/EII/sockets",
                    "SocketFile": "frontend-socket"
                },
                "Topics": ["*"],
                "PublisherAppName": "*",
                "AllowedClients": ["*"]
            }
        ],
        "Publishers": [
            {
                "Name": "backend",
                "Type": "zmq_ipc",
                "EndPoint": {
                    "SocketDir": "/EII/sockets",
                    "SocketFile": "backend-socket"
                },
                "Topics": ["*"],
                "AllowedClients": ["*"]
            }
        ]
    }
}
